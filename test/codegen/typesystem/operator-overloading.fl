struct v2 {
  f32 x,
  f32 y,
};

function operator +(v2 a, v2 b) : v2 {
  var v2 ret;
  ret.x = a.x + b.x;
  ret.y = a.y + b.y;

  return ret;
}

function operator -(v2 a, v2 b) : v2 {
  var v2 ret;
  ret.x = a.x - b.x;
  ret.y = a.y - b.y;

  return ret;
}

function operator *(v2 a, v2 b) : v2 {
  var v2 ret;
  ret.x = a.x * b.x;
  ret.y = a.y * b.y;

  return ret;
}

function operator /(v2 a, v2 b) : v2 {
  var v2 ret;
  ret.x = a.x / b.x;
  ret.y = a.y / b.y;

  return ret;
}

function operator [](v2* a, u64 index) : f32 {
  var ptr(f32) x = unsafe_cast(ptr(f32)) a;

  return x[index];
}


